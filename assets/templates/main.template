        s.parentNode.insertBefore(g,s)}(document,'script'));

      var data = [
        [[!getResources:default=``? &parents=`[[BabelTranslation? &resourceId=`164` &contextKey=`[[context]]`]]` &sortby=`menuindex` &sortdir=`ASC` &tpl=`history_event` &includeContent=`1` &includeTVs=`1` &processTVs=`1` &outputSeparator=`, ` &limit=`20`]]
      ];

      var time_wrap_width = $('#timeline').width();
      var time_wrap_height = $('.story_text').height();

      var timeline = new d3xTimeline(data, {
        container: '#timeline',
        w: time_wrap_width,
